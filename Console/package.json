{
  "version": "3.0.0",
  "main": "main.js",
  "name": "bert3-console",
  "description": "BERT v3.0 Enhanced Console with modern Electron and React integration",
  "build": {
    "directories": {
      "output": "../Build/Console"
    },
    "win": {
      "target": "dir"
    },
    "files": [
      "ext/**/*",
      "data/**/*",
      "build/**/*",
      "generated/*",
      "main.js",
      "index.html",
      "src/**/*"
    ],
    "icon": "bert2.ico"
  },
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run watch:ts\" \"npm run watch:less\" \"electron .\"",
    "clean": "rm -fr build/*",
    "build": "npm run build:less && npm run build:ts",
    "build:ts": "tsc",
    "build:less": "less-watch-compiler --run-once",
    "watch": "concurrently \"npm run watch:ts\" \"npm run watch:less\"",
    "watch:ts": "tsc --watch",
    "watch:less": "less-watch-compiler",
    "package": "electron-builder",
    "repackage": "npm run build && electron-builder",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "asar": "^3.2.0",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.8.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "jest": "^29.7.0",
    "less-watch-compiler": "^1.16.3",
    "typescript": "^5.3.3",
    "@testing-library/react": "^14.1.2",
    "@testing-library/jest-dom": "^6.1.5"
  },
  "dependencies": {
    "@types/text-encoding": "^0.0.39",
    "chokidar": "^3.5.3",
    "electron-reload": "^2.0.0-alpha.1",
    "electron-window-state": "^5.0.3",
    "google-protobuf": "^3.21.2",
    "js-base64": "^3.7.5",
    "less": "^4.2.0",
    "markdown-it": "^13.0.2",
    "markdown-it-task-lists": "^2.1.1",
    "monaco-editor": "^0.45.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rxjs": "^7.8.1",
    "xterm": "^5.3.0",
    "@grpc/grpc-js": "^1.9.14",
    "@grpc/proto-loader": "^0.7.10",
    "axios": "^1.6.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "electronVersion": "28.1.0"
}